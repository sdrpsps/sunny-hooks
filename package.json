{
  "name": "sunny-hooks",
  "private": true,
  "description": "React 业务 Hooks",
  "author": "sunny",
  "license": "ISC",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "npx simple-git-hooks",
    "init": "pnpm install && pnpm run build",
    "start": "pnpm run dev",
    "clean-dist": "rimraf 'packages/hooks/{lib,es,node_modules,dist}'",
    "clean": "pnpm run clean-dist && rimraf node_modules",
    "dev": "dumi dev",
    "build": "pnpm -r --filter=./packages/* run build",
    "build:doc": "dumi build",
    "test": "jest",
    "coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "pub": "pnpm run build && pnpm -r --filter=./packages/* publish",
    "pub:beta": "pnpm run build && pnpm -r --filter=./packages/* publish --tag beta",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "spellcheck": "cspell .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@ant-design/icons": "^5.0.1",
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.0.0",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.4.0",
    "@types/mockjs": "^1.0.7",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.62",
    "@types/react-router": "^5.1.19",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@umijs/fabric": "^2.1.0",
    "antd": "^5.2.1",
    "babel-plugin-import": "^1.12.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "cspell": "^7.3.9",
    "del": "^5.1.0",
    "dumi": "^1.1.48",
    "eslint": "^8.57.0",
    "eslint-config-alloy": "^5.1.2",
    "eslint-plugin-react": "^7.34.0",
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.0.1",
    "gray-matter": "^4.0.3",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "jest-localstorage-mock": "^2.4.18",
    "lint-staged": "^15.2.0",
    "mockjs": "^1.1.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^3.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-drag-listview": "^0.1.6",
    "react-router": "^6.4.2",
    "react-shadow": "^19.0.3",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.9.0",
    "surge": "^0.21.3",
    "ts-jest": "^29.0.5",
    "tslib": "^2.4.1",
    "typescript": "^5.3.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.10",
    "webpack-merge": "^4.2.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint --edit ${1}"
  },
  "lint-staged": {
    "*": [
      "cspell ."
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "npx prettier --write",
      "npx eslint --fix"
    ]
  }
}
